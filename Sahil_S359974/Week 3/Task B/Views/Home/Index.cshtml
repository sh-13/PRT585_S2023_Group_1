@model Task_B.Models.MovieModel
@{
    ViewData["Title"] = "Home Page";
}
<p>
    <a asp-action="Create">Add New Movie</a>
</p>

<h1>All Movies</h1>

@{
    @if (TempData["CreateStatus"] != null)
    {
        int status = Convert.ToInt16(TempData["CreateStatus"]);
        @if (status == 1)
        {
            <span class="alert alert-success"> Movie created successfully.</span>
        }
        else
        {
            <span class="alert alert-danger"> Error !! While creating movie.</span>
        }
    }
    @if (TempData["UpdateStatus"] != null)
    {
        int status = Convert.ToInt16(TempData["UpdateStatus"]);
        @if (status == 1)
        {
            <span class="alert alert-success"> Movie updated successfully.</span>
        }
        else
        {
            <span class="alert alert-danger"> Error !! While updating movie.</span>
        }
    }
    @if (TempData["DeleteStatus"] != null)
    {
        int status = Convert.ToInt16(TempData["DeleteStatus"]);
        @if (status == 1)
        {
            <span class="alert alert-success"> Movie deleted successfully.</span>
        }
        else
        {
            <span class="alert alert-danger"> Error !! While deleting movie.</span>
        }
    }
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Release Date</th>
            @*<th>
                @Html.DisplayNameFor(model => model.Price)
            </th>*@
            <th>Director</th>
            <th>Contact Email Address</th>
            <th>Language</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.MovieList.Count > 0)
        {
            @foreach (var item in Model.MovieList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No movies found</td>
            </tr>
        }
    </tbody>
</table>
